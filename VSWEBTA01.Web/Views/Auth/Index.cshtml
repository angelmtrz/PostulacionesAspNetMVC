@{ Layout = null; }

<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Angel Marthans">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Template/css/bootstrap.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="@Url.Content("~/Content/Template/css/estilos.css")" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body class="text-center">
    <main class="form-signin w-100 m-auto">
        <img class="mb-4" src="@Url.Content("~/Content/Template/images/lock.svg")" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Acceso al sistema</h1>
        @using (Html.BeginForm("Index", "Auth"))
        {
            @Html.AntiForgeryToken()
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                @Html.TextBox("username", "", new { @class = "form-control", @placeholder = "Usuario", @autocomplete = "off" })
            </div>
            <br />
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                 @Html.Password("password", "", new { @class = "form-control", @placeholder = "Password" })
            </div>
                <br />
                <button class="w-100 btn btn-primary" type="submit">
                    <span class="align-text-bottom" data-feather="log-in"></span>
                    Iniciar Sesión
                </button>
                }
                <br />
                @if (ViewBag.MensajeLogin != null)
                {
                    <div class="alert alert-warning">
                        @ViewBag.MensajeLogin
                    </div>
                }

</main>

</body>
</html>
